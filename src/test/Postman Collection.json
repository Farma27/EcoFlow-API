{
  "info": {
    "name": "EcoFlow API",
    "_postman_id": "12345678-1234-1234-1234-123456789012",
    "description": "Postman collection to test EcoFlow API handlers",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
